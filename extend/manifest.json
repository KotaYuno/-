{
  "manifest_version":  2,
  "name": "Sample App",
  "version": "0.0.1",
  "description": "Chrome 拡張機能を作るためのサンプル",
  "browser_action": { 
    "default_popup": "popup.html"
 },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "https://eqitter.herokuapp.com/*"
  ]
}